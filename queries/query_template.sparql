# Template used by wikidata_nomen_agent.py
# Placeholders: {LANGS} {LIMIT} {OCCUPATION_FILTER} {SURNAME_FILTER}

SELECT ?person ?personLabel ?surname ?surnameLabel ?occupation ?occupationLabel ?birth ?countryLabel WHERE {
  ?person wdt:P31 wd:Q5 .
  ?person wdt:P106 ?occupation .
  OPTIONAL { ?person wdt:P27 ?country . }
  OPTIONAL { ?person wdt:P569 ?birth . }
  ?person wdt:P734 ?surname .

  SERVICE wikibase:label { bd:serviceParam wikibase:language "{LANGS}" . }

  {OCCUPATION_FILTER}
  {SURNAME_FILTER}
}
LIMIT {LIMIT}
